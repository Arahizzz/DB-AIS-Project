@page "/category/update"
@model DBAIS.Pages.CategoryUpdateModel
@{
    Layout = "_Shared/_MasterLayoutPage";
}

<div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button type="button" id="sidebarCollapse" class="btn btn-info">
                <i class="fas fa-align-left"></i>
                <span>Toggle Sidebar</span>
            </button>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/category">Category</a></li>
                <li class="breadcrumb-item active" aria-current="page">Update</li>
            </ol>
        </div>
    </nav>
    <!-- Content -->
    <div>
        <div class="row">
            <div class="col-6">
                <p class="text-dark fw-bold">
                    Current category: @Model._category.Name
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <input type="text" class="form-control" placeholder="Category name" value="@Model._category.Name">
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Update category</button>
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-danger">Delete category</button>
            </div>
        </div>
    </div>
</div>


