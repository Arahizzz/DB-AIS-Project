@page "/category/update/{id:int}"
@model DBAIS.Pages.CategoryUpdateModel
@{
    Layout = "_Shared/_MasterLayoutPage";
}
<div>
    <!-- Toggle menu -->
    @{
        Dictionary<string, string> breadcrumbRoutes = new Dictionary<string, string>
        {
                    {"/", "Home"},
                    {"/category", "Category"},
                    {"/category/update", "Update"},
                };

    }
    <partial name="_ToggleSidebarWithBreadcrumbs" model="@breadcrumbRoutes" />
    <!-- Content -->
    <div>
        @{
            var header = "Current category: " + (Model.Category != null ? Model.Category.Name : "");
        }
        <partial name="_EditPageHeader" model="@header" />
        @if (ModelState.ErrorCount > 0)
        {
            <div id="book-alert" class="alert alert-danger" role="alert" style="{margin:10px;}">
                <div class="validation" asp-validation-summary="All"></div>
            </div>
        }
        <form method="post">
            <div class="row">
                <div class="col-6">
                    <input type="text" asp-for="CategoryName" class="form-control" placeholder="Category name" value=@(Model.Category != null ? Model.Category.Name : "")>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-2">
                    <a href="/category">
                        <button type="button" class="btn btn-secondary">Cancel</button>
                    </a>
                </div>
                <div class="col-2">
                    <input type="submit" class="btn btn-primary" value="Update Category">
                </div>
            </div>
        </form>
    </div>
</div>


