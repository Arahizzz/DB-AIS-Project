<h1>Customers</h1>
@if (ModelState.ErrorCount > 0)
{
    <div id="book-alert" class="alert alert-danger" role="alert" style="{margin:10px;}">
        <div class="validation" asp-validation-summary="All"></div>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Client card</th>
            <th scope="col">Surname</th>
            <th scope="col">Name</th>
            <th scope="col">Patronym</th>
            <th scope="col">Telephone</th>
            <th scope="col">City</th>
            <th scope="col">Street</th>
            <th scope="col">%</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
        <tr>
            <td>@customer.Number</td>
            <td>@customer.Surname</td>
            <td>@customer.Name</td>
            <td>@customer.Patronymic</td>
            <td>@customer.Phone</td>
            @if (@customer.City != null)
            {
                <td>@customer.City</td>
            }
            else
            {
                <td>-</td>
            }
            @if (@customer.Street != null)
            {
                <td>@customer.Street</td>
            }
            else
            {
                <td>-</td>
            }

            <td>@customer.Percent</td>
            <td>
                @if (User.Identity.IsAuthenticated && (User.IsInRole("cashier")||User.IsInRole("manager")))
                {
                <a asp-page="ClientCardUpdate" asp-route-id="@customer.Number" class=" text-primary link-primary">Update</a>
                }
            </td>
            <td>
                @if (User.IsInRole("manager"))
                {
                    <form method="post">
                        <input type="submit" asp-page-handler="delete" asp-route-id="@customer.Number" class="btn btn-danger" value="Delete">
                    </form>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
